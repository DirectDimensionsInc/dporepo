{% extends 'base.html.twig' %}

{% block body %}
    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">

            {% include 'default/banner.html.twig' %}

            <div class="inner">
              <h3 class="masthead-brand"></h3>
                {% if database_error %}
                    <div class="alert alert-danger">
                        {{ database_error }}
                    </div>
                {% endif %}
            </div>
          </div>

          <div class="inner cover">
            <h1 class="cover-heading">{{ site_title|e }} (prototype)</h1>
            
            <div>
              {% if database_installed %}
                <p class="lead">
                    Database has been generated successfully.
                </p>
                
                <p class="lead">
                    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a href="/login" class="btn btn-lg btn-default">Login</a>
                      {% endif %}
                </p>
              {% endif %}
            </div>
          </div>
          <div class="mastfoot">
            <div class="inner">
              {# {% if site_footer is not empty %}
              {% include site_footer %}
              {% endif %} #}
            </div>
          </div>

        </div>

      </div>

    </div>
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ asset('lib/css/cover.css') }}" media="screen" />
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.3.1/jquery.cookie.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ asset('lib/javascripts/ie10-viewport-bug-workaround.js') }}"></script>
{% endblock %}

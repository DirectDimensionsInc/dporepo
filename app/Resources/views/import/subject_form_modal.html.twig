{% block subject_form %}
<div class="modal fade" id="subject-form-modal" tabindex="-1" role="dialog" aria-labelledby="subjectFormLabel" data-keyboard="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="subjectFormLabel"><i class="glyphicon glyphicon-th-list"></i> <span id="subject-form-modal-title">Create a New Subject</span></h2>
      </div>
      <div class="modal-body" style="min-height: 24rem;">
        {{ form_start(subject_form) }} {# , {'attr': {'novalidate': 'novalidate'}} #}
          <div class="row">
            <div class="col-sm-6 col-md-6">
              {{ form_row(subject_form.subject_name) }}
              {{ form_row(subject_form.subject_display_name) }}
              {{ form_row(subject_form.subject_guid) }}
              {{ form_row(subject_form.save) }}
            </div>
            <div class="col-sm-6 col-md-6">
              {{ form_row(subject_form.local_subject_id) }}
              {{ form_row(subject_form.holding_entity_guid) }}
            </div>
          </div>
        {{ form_end(subject_form) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
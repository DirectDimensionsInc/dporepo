        <script type="text/javascript">
        $(document).ready(function(){
          var  model_repository_id = $("#model_repository_id").val();
          $('#browse_uv_maps').dataTable( {
            "columns": [
              { "data": "manage" },
              { "data": "map_type" },
              { "data": "map_file_type" },
              { "data": "map_size" },
              { "data": "last_modified" }

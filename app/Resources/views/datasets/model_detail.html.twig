{% extends 'default_bootstrap_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" rel="stylesheet" type="text/css">
    {% if data.model_repository_id is defined %}
        <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.bootstrap.min.css" rel="stylesheet" type="text/css" />
    {% endif %}
{% endblock %}

{% block content %}
    <ol class="breadcrumb">
      <li><a href="/admin">Dashboard</a></li>
      <li><a href="/admin/workspace">Browse Projects</a></li>
      <li>Project: <a href="/admin/projects/subjects/{{modeldetail.project_repository_id}}">{{modeldetail.project_name}}</a></li>
      <li>Subject: <a href="/admin/projects/subjects/{{modeldetail.project_repository_id}}/{{modeldetail.subject_repository_id}}">{{modeldetail.subject_name}}</a></li>
      <li>Item: <a href="/admin/projects/datasets/{{modeldetail.project_repository_id}}/{{modeldetail.subject_repository_id}}/{{modeldetail.parent_item_repository_id}}">{{modeldetail.item_description}}</a></li>
      {% if modeldetail.capture_dataset is defined %}
        <li>Capture Dataset: <a href="/admin/projects/dataset_elements/{{modeldetail.project_repository_id}}/{{modeldetail.subject_repository_id}}/{{modeldetail.parent_item_repository_id}}/{{modeldetail.capture_dataset.capture_dataset_repository_id}}">{{modeldetail.capture_dataset.capture_dataset_name}}</a></li>  
      {% endif %}
      <li class="active">Model Detail</li>
    </ol>

    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="form-group">
                <a href="" class="btn btn-default" role="button"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back</a>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h2>Model Detail</h2>
        <div class="col-md-6">
          <input type="hidden" id="model_repository_id" value="{{modeldetail.model_repository_id}}">
          {% if modeldetail.capture_dataset is defined %}
            <div><label>Model created from capture dataset:</label> <a href="/admin/projects/dataset_elements/{{modeldetail.project_repository_id}}/{{modeldetail.subject_repository_id}}/{{modeldetail.parent_item_repository_id}}/{{modeldetail.capture_dataset.capture_dataset_repository_id}}">{{modeldetail.capture_dataset.capture_dataset_name}}</a></div>
          {% endif %}
          <div><label>Model GUID: </label> {{modeldetail.model_guid}}</div>
          {% if modeldetail.date_of_creation %}
           <div><label>Date Of Creation: </label> {{modeldetail.date_of_creation|date("m/d/Y")}}</div>
          {% endif %}
          {% if modeldetail.model_file_type != null %}
            <div><label>Model File Type:</label> {{modeldetail.model_file_type}}</div>
          {% endif %}
          {% if modeldetail.derived_from != null %}
            <div><label>Derived From: </label> {{modeldetail.derived_from}}</div>
          {% endif %}
          <div><label>Creation Method: </label> {{modeldetail.creation_method}}</div>
          <div><label>Model Modality: </label> {{modeldetail.model_modality}}</div>
          <div><label>Units: </label> {{modeldetail.units}}</div>
          {% if modeldetail.is_watertight == 1 %}
            <div><label>Is Watertight</label></div>
          {% endif %}
        </div>
        <div class="col-md-6">
          <div><label>Model Purpose:  </label> {{modeldetail.model_purpose}}</div>
          {% if modeldetail.point_count != null %}
            <div><label>Point Count: </label> {{modeldetail.point_count}}</div>
          {% endif %}
          {% if modeldetail.has_normals == 1 %}
            <div><label>Has Normals</label></div>
          {% endif %}
          {% if modeldetail.face_count != null %}
            <div><label>Face Count: </label> {{modeldetail.face_count}}</div>
          {% endif %}
          {% if modeldetail.vertices_count != null %}
            <div><label>Vertices Count: </label> {{modeldetail.vertices_count}}</div>
          {% endif %}
          {% if modeldetail.has_vertex_color != null %}
            <div><label>Has Vertex Color</label></div>
          {% endif %}
          {% if modeldetail.has_uv_space != null %}
            <div><label>Has UV Space</label></div>
          {% endif %}
          {% if modeldetail.model_maps != null %}
            <div><label>Model Maps:</label> {{modeldetail.model_maps}}</div>
          {% endif %}
          {% if modeldetail.file_path != null %}
            <div><label>File Path:</label> {{modeldetail.file_path}}</div>
          {% endif %}
          {% if modeldetail.face_count != null %}
            <div><label>File Checksum:</label> {{modeldetail.file_checksum}}</div>
          {% endif %}
        </div>
      </div>
      {% if modeldetail.parent_model_id == null %}
        <div class="panel panel-default">
            <div class="panel-body">
                <h2>Master models derived from dataset</h2>
                <input type="hidden" id="delete-path" value="admin/projects/model/delete" />
                <table id="browse_models" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th style="padding-left: 8px;"><input class="remove-records-checkbox" type="checkbox"> Remove?</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
      {% endif %}
      <div class="panel-body">
          <h2>Model Files</h2>
          <input type="hidden" id="delete-model-file" value="admin/projects/model_file/delete" />
          <table id="browse_model_files" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
              <tr>
                  <th style="padding-left: 8px;"><input class="remove-records-checkbox" type="checkbox"> Remove?</th>
                  <th class="text-center">File Name</th>
                  <th class="text-center">Fullpath</th>
                  <th class="text-center">Last Modified</th>
              </tr>
              </thead>
          </table>
      </div>
      {% if modeldetail.capture_dataset is defined %}
        <div class="panel-body">
            <h2>UV Maps</h2>
            <input type="hidden" id="capture_dataset_id" value="{{modeldetail.capture_dataset.capture_dataset_repository_id}}">
            <input type="hidden" id="delete-path" value="admin/projects/uv_map/delete" />
            <table id="browse_uv_maps" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th style="padding-left: 8px;"><input class="remove-records-checkbox" type="checkbox"> Remove?</th>
                    <th class="text-center">Map Type</th>
                    <th class="text-center">Map File Type</th>
                    <th class="text-center">Map Size</th>
                    <th class="text-center">Last Modified</th>
                </tr>
                </thead>
            </table>
        </div>
      {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
      // Datepicker
      $(document).ready(function(){
        var date_of_creation_input = $('input[name="model_form[date_of_creation]"]');
        var container = $('form.model_form').length > 0 ? $('form.model_form').parent() : 'body';
        var options = {
          format: 'yyyy-mm-dd 00:00:00',
          container: container,
          todayHighlight: true,
          autoclose: true,
        };
        date_of_creation_input.datepicker(options);
      });
    </script>

    {% if data.model_repository_id is defined %}
        <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.bootstrap.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.colVis.min.js"></script>
        <script type="text/javascript">
        $(document).ready(function(){
          var capture_dataset_repository_id = $("#capture_dataset_id").val();
          var  model_repository_id = $("#model_repository_id").val();
          $('#browse_uv_maps').dataTable( {
          "columns": [
            { "data": "manage" },
            { "data": "map_type" },
            { "data": "map_file_type" },
            { "data": "map_size" },
            { "data": "last_modified" }
          ],
          "dom": 'lfip<"datatables_bulk_actions">tip',
          "pagingType": "simple_numbers",
          "stateSave": true,
          "order": [[4,"desc"]],
          // Show processing throbber.
          "processing": true,
          "serverMethod": "POST",
          // All data management will be done on the server side.
          "serverSide": true,
          // Path to the file that is going to handle the queries.
          "ajax": {
            "url": "/admin/projects/uv_map/datatables_browse",
            "data": {
              "parent_id": capture_dataset_repository_id
            }
          },
          // Method type.
          "serverMethod": "POST",
          // Values in the length dropdown.
          "lengthMenu":[10,50,100,500],
          // Set some widths.
          "aoColumnDefs":[
            {"sWidth":"106px","aTargets":[0]},
            {"bSortable":false,"aTargets":[0]},
          ],
          "data": {
            "parent_id": capture_dataset_repository_id
          },
          "fnRowCallback":function(nRow, aData, iDisplayIndex) {

            // This table row.
            var thisTableRow = $(nRow);
            // Create the delete record checkboxes.
            thisTableRow.find('td:eq(0)')
              .html("<input type='checkbox' name='manage_checkbox' value='" + aData['manage'] + "' />")
              .addClass("manage_column");
            // Send to details page when clicked.
            thisTableRow.find('td').click(function() {
              // This table cell.
              var thisTableCell = $(this);
              // Don't do anything if the table cell has the 'manage_column' CSS class.
              if(thisTableCell.hasClass('manage_column')) return;
              // Send to the details page.
              var this_id = thisTableCell.closest("tr").attr('id');
              window.location.href = '/admin/projects/uv_map/manage/' + capture_dataset_repository_id + '/' + this_id;
            });
          }
        });
        var uv_maps_add_button = $('<a />')
          .addClass('btn btn-default add-record-button')
          .attr('href', '/admin/projects/uv_map/manage/' + capture_dataset_repository_id)
          .html('<span class="glyphicon glyphicon-plus"></span> Add a UV Map');
        $('#browse_uv_maps_wrapper').find('.datatables_bulk_actions').append(uv_maps_add_button);
        
        $('#browse_model_files').dataTable( {
          "columns": [
            { "data": "model_file_id" },
            { "data": "filename" },
            { "data": "fullpath" },
            { "data": "last_modified" }
          ],
          "dom": 'lfip<"datatables_bulk_actions">tip',
          "pagingType": "simple_numbers",
          "stateSave": true,
          "order": [[1,"desc"]],
          // Show processing throbber.
          "processing": true,
          "serverMethod": "POST",
          // All data management will be done on the server side.
          "serverSide": true,
          // Path to the file that is going to handle the queries.
          "ajax": {
            "url": "/admin/model/files/datatables_browse",
            "data": {
              "parent_id": model_repository_id
            }
          },
          // Method type.
          "serverMethod": "POST",
          // Values in the length dropdown.
          "lengthMenu":[10,50,100,500],
          // Set some widths.
          "aoColumnDefs":[
            {"sWidth":"106px","aTargets":[0]},
            {"bSortable":false,"aTargets":[0]},
          ],
          "data": {
            "parent_id": model_repository_id
          }
        });
      });
      </script>
    {% endif %}
{% endblock %}
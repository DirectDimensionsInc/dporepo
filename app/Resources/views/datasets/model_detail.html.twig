{% extends 'default_bootstrap_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.bootstrap.min.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <ol class="breadcrumb">
      <li><a href="/admin">Dashboard</a></li>
      <li><a href="/admin/workspace">Browse Projects</a></li>
      <li>Project: <a href="/admin/projects/subjects/{{data.parent_records.project_repository_id}}">{{data.project_name}}</a></li>
      <li>Subject: <a href="/admin/projects/items/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}">{{data.subject_name}}</a></li>
      
      {% if data.capture_dataset|length %}
        <li>Item: <a href="/admin/projects/datasets/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}/{{data.parent_records.item_repository_id}}">{{ data.item_description|length > 50 ? data.item_description|slice(0, 50) ~ '...' : data.item_description  }}</a></li>
        <li>Capture Dataset: <a href="/admin/projects/dataset_elements/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}/{{data.parent_records.item_repository_id}}/{{data.capture_dataset.capture_dataset_repository_id}}">{{data.capture_dataset.capture_dataset_name}}</a></li>
      {% else %}
        <li>Item: <a href="/admin/projects/datasets/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}/{{data.parent_records.item_repository_id}}">{{ data.item_description|length > 50 ? data.item_description|slice(0, 50) ~ '...' : data.item_description  }}</a></li>
      {% endif %}
      <li class="active">Model Detail</li>
    </ol>

    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="form-group">
                <a href="{% if data.capture_dataset|length %}/admin/projects/dataset_elements/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}/{{data.parent_records.item_repository_id}}/{{data.capture_dataset.capture_dataset_repository_id}} {% else %}/admin/projects/datasets/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}/{{data.parent_records.item_repository_id}} {% endif %}" class="btn btn-default" role="button"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="col-md-6">
              <input type="hidden" id="model_repository_id" value="{{data.model_repository_id}}">
                {% if data.parent_model_id %}
                    <div><label><a href="/admin/projects/model/{{data.parent_model_id}}/detail">Parent Model</a></label></div>
                {% endif %}
              {% if data.capture_dataset|length %}
                <div><label>Capture Dataset:</label> <a href="/admin/projects/dataset_elements/{{data.parent_records.project_repository_id}}/{{data.parent_records.subject_repository_id}}/{{data.parent_records.item_repository_id}}/{{data.capture_dataset.capture_dataset_repository_id}}">{{data.capture_dataset.capture_dataset_name}}</a></div>
              {% endif %}
              <div><label>Model GUID: </label> {{data.model_guid}}</div>
              {% if data.date_of_creation %}
               <div><label>Date Of Creation: </label> {{data.date_of_creation|date("m/d/Y")}}</div>
              {% endif %}
              {% if data.model_file_type != null %}
                <div><label>Model File Type:</label> {{data.model_file_type}}</div>
              {% endif %}
              {% if data.derived_from != null %}
                <div><label>Derived From: </label> {{data.derived_from}}</div>
              {% endif %}
              <div><label>Creation Method: </label> {{data.creation_method}}</div>
              <div><label>Model Modality: </label> {{data.model_modality}}</div>
              <div><label>Units: </label> {{data.units}}</div>
              {% if data.is_watertight == 1 %}
                <div><label>Is Watertight</label></div>
              {% endif %}
            </div>
            <div class="col-md-6">
              <div><label>Model Purpose:  </label> {{data.model_purpose}}</div>
              {% if data.point_count != null %}
                <div><label>Point Count: </label> {{data.point_count}}</div>
              {% endif %}
              {% if data.has_normals == 1 %}
                <div><label>Has Normals</label></div>
              {% endif %}
              {% if data.face_count != null %}
                <div><label>Face Count: </label> {{data.face_count}}</div>
              {% endif %}
              {% if data.vertices_count != null %}
                <div><label>Vertices Count: </label> {{data.vertices_count}}</div>
              {% endif %}
              {% if data.has_vertex_color != null %}
                <div><label>Has Vertex Color</label></div>
              {% endif %}
              {% if data.has_uv_space != null %}
                <div><label>Has UV Space</label></div>
              {% endif %}
              {% if data.model_maps != null %}
                <div><label>Model Maps:</label> {{data.model_maps}}</div>
              {% endif %}
            </div>
        </div>
        <div class="col-md-12">
            <a class="btn btn-primary" href="/admin/projects/model/{{data.model_repository_id}}/viewer" target="_blank">Preview 3D Model in Viewer</a>
        </div>
    </div>

<div class="col-sm-12 col-md-12 child-data">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Derivative Models</h2>
            <input type="hidden" id="delete-path" value="admin/projects/model/delete" />
            <table id="browse_models" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th style="padding-left: 8px;"><input class="remove-records-checkbox" type="checkbox"> Remove?</th>
                    <th class="text-center">Download</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                </tr>
                </thead>
            </table>
        </div>
      </div>
      <div class="panel panel-default">
          <div class="panel-body">
              <h2>Model Files</h2>
              <input type="hidden" id="delete-model-file" value="admin/projects/model_file/delete" />
              <table id="browse_model_files" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                  <tr>
                      <th style="padding-left: 8px;"><input class="remove-records-checkbox" type="checkbox"> Remove?</th>
                      <th class="text-center">File Name</th>
                      <th class="text-center">Path</th>
                      <th class="text-center">Last Modified</th>
                  </tr>
                  </thead>
              </table>
          </div>
          <div class="panel-body">
              <h2>UV Maps</h2>
              <table id="browse_uv_maps" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                  <tr>
                      <th style="padding-left: 8px;"><input class="remove-records-checkbox" type="checkbox"> Remove?</th>
                      <th class="text-center">Map Type</th>
                      <th class="text-center">Map File Type</th>
                      <th class="text-center">Map Size</th>
                      <th class="text-center">Last Modified</th>
                  </tr>
                  </thead>
              </table>
          </div>
      </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>

    {% if data.model_repository_id is defined %}

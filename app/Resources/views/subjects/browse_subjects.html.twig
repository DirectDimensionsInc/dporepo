{% extends 'default_bootstrap_admin.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="//cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
  <link href="{{ asset('lib/javascripts/DataTables-extended/css/bootstrap_datatables.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}

  <ol class="breadcrumb">
    <li><a href="/admin">Dashboard</a></li>
    <li><a href="/admin/projects">Browse Projects</a></li>
    <li class="active"><strong>Project:</strong> {{ project_data.projects_label|e }}</li>
  </ol>

  <div class="row">
    <div class="col-sm-6 col-md-6">
      <dl class="dl-horizontal">
        <dt>Project Name</dt>
        <dd>{{ project_data.projects_label|e }}</dd>
        <dt>Stakeholder GUID</dt>
        <dd>{{ project_data.stakeholder_guid|e }}</dd>
        <dt>Project Description</dt>
        <dd>{{ project_data.project_description|e }}</dd>
      </dl>
    </div>
    <div class="col-sm-6 col-md-6">
      <dl class="dl-horizontal">
        <dt>Date Created</dt>
        <dd>{{ project_data.date_created|e }}</dd>
        <dt>Last Modified</dt>
        <dd>{{ project_data.last_modified|e }}</dd>
      </dl>
    </div>
  </div>

  <a href="/admin/projects/" class="btn btn-default" role="button"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back to Browse Projects</a>
  <a href="/admin/projects/manage/{{ projects_id }}" class="btn btn-default" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit This Project</a>

  <hr>

  <h2>Subjects</h2>
  <a href="/admin/projects/subject/{{ projects_id }}" class="btn btn-default" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a Subject</a>

  <table id="browse" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-center">Request Download</th>
      <th class="text-center">Subject Name</th>
      <th class="text-center">Location Information</th>
      <th class="text-center">Holding Entity GUID</th>
      <th class="text-center">Last Modified</th>
      <th class="text-center">Status</th>
    </tr>
  </thead>
</table>
{% endblock %}
{% block js_bottom %}
  {{ parent() }}
  <script src="//cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
  <script src="//cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#browse').dataTable( {
          "columns": [
              { "data": "manage" },
              { "data": "subject_name" },
              { "data": "location_information" },
              { "data": "holding_entity_guid" },
              { "data": "last_modified" },
              { "data": "active" }
            ],
          "dom": '<"wrapper"fli><"col-sm-3 col-md-3 datatables_bulk_actions">pt<"bottom"ip><"clear">',
          "pagingType": "simple_numbers",
          "stateSave": true,
          "order": [[1,"desc"]],
          // Show processing throbber.
          "processing": true,
          "serverMethod": "POST",
          // All data management will be done on the server side.
          "serverSide": true,
          // Path to the file that is going to handle the queries.
          "ajax": "/admin/projects/datatables_browse_subjects/{{ projects_id }}",
          // Method type.
          "serverMethod": "POST",
          // Values in the length dropdown.
          "lengthMenu":[10,50,100,500],
          // Set some widths.
          "aoColumnDefs":[
              {"sWidth":"100px","aTargets":[0]}
              ,{"bSortable":false,"aTargets":[0]}
          ],
          "fnRowCallback":function(nRow, aData, iDisplayIndex) {
            // Create the checkboxes.
            $(nRow).find('td:eq(0)').html(
              "<input type='checkbox' name='manage_checkbox' value='" + aData['manage'] + "' />"
            )
            .addClass("manage_column");
          }
        });

      // Send to details page when clicked.
      var details_page = "/admin/projects/items/";
      $('#browse tbody').on('click','td',function(event){
        if(!$(this).hasClass("manage_column")){
          var subjects_id = $(this).closest("tr").attr('id');
          var projects_id = "{{ projects_id }}";
          window.location.href = details_page + projects_id + '/' + subjects_id;
        }
      });

      var delete_button = $("<button></button>")
        .addClass("btn btn-default btn-sm glyphicon glyphicon-download-alt")
        .attr('style', 'margin-bottom: 0.5rem; width: 13.5rem;')
        .on("click", function(){

          var delete_ids = new Array;
          $('#browse [name="manage_checkbox"]:checked').each(function(){
            delete_ids.push($(this).val());
          });

          if(delete_ids.length > 0) {

            swal({
              title: "Send Download Request",
              text: "Send a request to download chosen assets?",
              type: "warning",
              showCancelButton: true,
              confirmButtonColor: "#DD6B55",
              confirmButtonText: "Send Request",
              closeOnConfirm: true
            },
            function(){
             //  $.ajax({
             //    type:"POST"
             //    ,dateType:"json"
             //    ,url: "/projects/subjects/delete"
             //    ,data: ({id: JSON.stringify(delete_ids), csrf_key: "{#{ csrf_token }#}"})
             //    ,success: function(ajax_return){
             //     $('#browse').dataTable().fnDraw();
             //    }
             // });
            });

          }
        });

      $(".datatables_bulk_actions").append(delete_button);

    });
  </script>
{% endblock %}
